li.tickets-list__item.js-card
  .ticket-card.ticket-card--color06
    .ticket-card__img
      img(src=`/img/${offer.img}` alt=offer.title)
    .ticket-card__info
      span.ticket-card__label= offer.type === `sale` ? `Продам` : `Куплю`
      .ticket-card__categories
        each category in offer.categories
          a(href=`offers/category/${category.id}`)= category.name
      .ticket-card__header
        h3.ticket-card__title
          a(href=`offers/${offer.id}`)= offer.title
        p.ticket-card__price
          span.js-sum= offer.sum
          |  ₽
    button.ticket-card__del.js-delete(type='button') Удалить
